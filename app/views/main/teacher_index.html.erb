<header class="main_header">
  <nav>
    <ul>
      <li><%= link_to 'LOGOUT','/logout',class: :top_header_link%></li>
      <li><%= link_to 'CREATE COURSE','/add_course',class: :top_header_link %></li>
      <li><%= link_to 'CONTACT','#',class: :top_header_link %></li>
      <li><%= link_to 'REVIEW US','#',class: :top_header_link %></li>
      <li><%= link_to 'TEAM','#',class: :top_header_link %></li>
    </ul>
  </nav>
</header>

<aside>
  <h3>MY COURSES</h3>
  <ul>
    <% @my_courses.each  do |course|%>
        <li>
          <div>
            <p><%= course.name %></p>
            <p class="genre">Genre: <%= course.genre %></p>
            <%= link_to 'VISIT',url_for(controller: :main,action: :update_course,:course=>course.id),class: :link %>
          </div>
        </li>
    <% end %>
  </ul>
</aside>


